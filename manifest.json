{
    "manifest_version": 2,
    "name": "音量增益工具",
    "version": "2.0",
    "description": "音量增益小工具，扩大网页音量",
    "homepage_url": "https://laisc7301.github.io/blog/",
    "icons": {
        "48": "icon.png"
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_title": "音量增益器",
        "default_icon": "icon.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "content_security_policy": "script-src 'self' ; object-src 'self'"
}